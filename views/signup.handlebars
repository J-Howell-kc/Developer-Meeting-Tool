<h1 class="banner text-center">Welcome to Devs Unite!</h1>
<h2 class="text-center">A Dev Student Meetup Scheduler</h2>

<div class="loginForm d-flex flex-row 0 justify-content-center">
  <div>
    <form class="signup-form">
      <div>

        <input
          class="w-100"
          type="username"
          id="username-signup"
          placeholder="Username"
        />
      </div>
            <div class="mt-3">

        <input
          class="w-100"
          type="email"
          id="email-signup"
          placeholder="E-Mail"
        />
      </div>
      <div class="mt-3">

        <input
          class="w-100"
          type="password"
          id="password-signup"
          placeholder="Password"
        />
      </div>
      <div class="mt-3 d-flex justify-content-center">
        <button class="btn btn-primary" type="submit">signup</button>
      </div>
    </form>

    <a
      class="mt-3 btn btn-secondary d-flex justify-content-center"
      id="signMeUp"
