<h3 class = "text-center">Dashboard</h3>
<div class = "controls">
<div>
    <h1>Username</h1>
    <img class = "w-25" src = "./imgs/cactus.webp">
</div>
<div class = "d-flex flex-column">
    <button class = 'mt-2 btn btn-primary'>My Profile</button>
    <button class = 'mt-2 btn btn-primary'>Message Board</button>
    <button class = 'mt-2 btn btn-primary' data-bs-toggle="modal" data-bs-target="#createEventModal">Create Meetup</button>
    {{!-- <button class = 'btn btn-secondary'>Log Out</button> --}}
</div>
</div>
<div id="calendar"> 
</div>
<div class="modal fade" id="createEventModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h1 class="modal-title fs-5" id="exampleModalLabel">Event info</h1>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <form>
              <div class="mb-3">
                <label for="event-title" class="col-form-label">Title:</label>
                <input type="text" class="form-control" id="event-title">
              </div>
              <div class="mb-3">
                <label for="event-creator" class="col-form-label">Name:</label>
                <input type="text" class="form-control" id="event-creator">
              </div>
              <div class="mb-3">
                <label for="event-des" class="col-form-label">Description:</label>
                <textarea class="form-control" id="event-des"></textarea>
              </div>
              <div class="mb-3">
                <label for="event-location" class="col-form-label">Location:</label>
                <input type="text" class="form-control" id="event-location">
              </div>
              <div class="mb-3">
                <label for="event-start" class="col-form-label">Start Time:</label>
                <input type="text" class="form-control" id="event-start-time">
              </div>
              <div class="mb-3">
                <label for="event-time" class="col-form-label">Start Date:</label>
                <input type="text" class="form-control" id="datepicker">
              </div>
            </form>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <button type="button" class="btn btn-primary" id="postBtn">Post Event</button>
          </div>
        </div>
      </div>
    </div>
