<section class=" mt-5 row">
<div class = "d-flex justify-content-center">

  <div class = "column">
    <h2 class = "button text-center" >Create New Post</h2> 

    <form class="new-post-form">
      <div>
        <label class = "button" for="post-title">Title</label>
        <input type="text" id="post-title" name="post-title" />
      </div>
      <div class = "mt-3">
        <label class = "button" for="post-content">Text</label>
        <textarea id="post-content" name="post-content"></textarea>
      </div>
      <button type="submit" class="btn btn-primary d-block mx-auto mt-3 button">Create</button>
    </form>
  </div>
</div>
{{#if posts.length}}
<section>
  <h2>Message Board</h2>
  <ol>
    {{#each posts as |post|}}
    <li>
      {{> post-info post}}
      <a href="/messageboard/edit/{{post.id}}" class="edit-link">Edit post</a>
    </li>
    {{/each}}
  </ol>
</section>
{{/if}}


</section>
  </div>
  </div>

<script src="/javascript/addPost.js"></script>